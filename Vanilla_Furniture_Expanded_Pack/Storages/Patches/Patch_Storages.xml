								<li MayRequire="VanillaExpanded.VPsycastsE">VPE_Eltex</li>
							</thingDefs>
						</filter>
					</fixedStorageSettings>
					<defaultStorageSettings>
						<priority>Critical</priority>
						<filter>
							<categories>
								<li>Artifacts</li>
							</categories>
							<thingDefs>
