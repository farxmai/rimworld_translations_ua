					<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
					<fixedStorageSettings>
						<priority>Critical</priority>
						<filter>
							<categories>
								<li>Artifacts</li>
								<li MayRequire="kikohi.jewelry">K_Jewelry</li>
							</categories>
							<thingDefs>
								<li>Gold</li>
