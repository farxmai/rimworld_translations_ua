<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="OrganicProductBase">
		<defName>FFE_ChoppedMeat</defName>
		<label>chopped meat</label>
		<description>Minced meat product. It doesn`t look very appetizing, and spoils quickly outside the refrigerator. May consist of several types of meat and is mixed so much that it is impossible to determine what it is made of.</description>
		<graphicData>
			<texPath>Things/Resource/ChoppedMeat</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>1.5</daysToRotStart>
				<rotDestroys>True</rotDestroys>
			</li>
		</comps>
		<statBases>
			<Nutrition>0.05</Nutrition>
			<Flammability>0.5</Flammability>
			<FoodPoisonChanceFixedHuman>0.02</FoodPoisonChanceFixedHuman>
			<Mass>0.03</Mass>
			<MarketValue>3.5</MarketValue>
		</statBases>
		<ingestible>
			<foodType>Meat</foodType>
			<preferability>DesperateOnly</preferability>
			<ingestEffect>EatMeat</ingestEffect>
			<ingestSound>RawMeat_Eat</ingestSound>
			<specialThoughtDirect>AteRawFood</specialThoughtDirect>
		</ingestible>
		<thingCategories>
			<li>MeatRaw</li>
		</thingCategories>
	</ThingDef>


</Defs>
